<body class="hold-transition register-page">
   
    <div class="register-box">
        <div class="register-logo">
            <b>LIBRARY</b> SINGN UP
        </div>
        <div class="register-box-body">
            <p class="login-box-msg">Register a new membership</p>


@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)


                    <div class="form-group has-feedback">
                            @Html.TextBoxFor(model => model.FirstName, new { placeholder = "Full name", @class = "form-control", type = "text", required = "required" })
                            @Html.ValidationMessageFor(model => model.FirstName)
                    </div>

                    
                       
                        <div class="form-group has-feedback">
                            @Html.TextBoxFor(model => model.LastName, new { placeholder = "Last Name", @class = "form-control", type = "text", required = "required" })
                            @Html.ValidationMessageFor(model => model.LastName)
                        </div>
                    

                    <div class="form-group has-feedback">
                            @Html.TextBoxFor(model => model.Password, new { placeholder = "Password", @class = "form-control", type = "password", required = "required" })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    

                    <div class="form-group has-feedback">
                            @Html.TextBoxFor(model => model.Address, new { placeholder = "Address", @class = "form-control", type = "text", required = "required" })
                            @Html.ValidationMessageFor(model => model.Address)
                        </div>
                   

                    <div class="form-group has-feedback">
                            @Html.TextBoxFor(model => model.Phone, new { placeholder = "Phone", @class = "form-control", type = "phone"})
                            @Html.ValidationMessageFor(model => model.Phone)
                        
                    </div>

                    <div class="form-group has-feedback">
                            @Html.TextBoxFor(model => model.Email, new { placeholder = "Email", @class = "form-control", type = "email", required = "required" })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                        <div class="form-group has-feedback">

                            <div class="form-group">
                                @Html.LabelFor(model => model.Gender, new { @class = "control-label col-md-2" })
                                <div class="form-group has-feedback">
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; @Html.RadioButtonFor(model => model.Gender, "Male",new { required="required"})
                                    &nbsp;&nbsp;&nbsp;@Html.Label("Male")
                                    &nbsp;&nbsp;&nbsp;@Html.RadioButtonFor(model => model.Gender, "Female")
                                    &nbsp;&nbsp;&nbsp;@Html.Label("Female")
                                    @Html.ValidationMessageFor(model => model.Gender)
                                </div>
                            </div>

                            <div class="form-group has-feedback">
                                @Html.TextBoxFor(model => model.DOB, new {@class = "form-control", type = "date", required="required" })
                                @Html.ValidationMessageFor(model => model.DOB)
                            
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-8" style="margin-right:18%;">
                                    <input type="submit" value="Register" class="btn btn-primary btn-block btn-flat" />
                                </div>
                            </div>


            
