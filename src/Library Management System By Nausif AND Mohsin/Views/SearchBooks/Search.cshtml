@model IEnumerable<Library_Management_System_By_Nausif_AND_Mohsin.Models.SearchBooks>

@{
    ViewBag.Title = "Search";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="text" placeholder="Enter Book Title" name="bookname" /> &nbsp;
        <input type="text" placeholder="Enter Book Author" name="bookauthor" />&nbsp;
        <input type="text" placeholder="Enter Category" name="category" />&nbsp;
        <input type="submit" value="Search" />
    </div>
}
<br/>
<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.book_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_published_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Book_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publisher_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Book_Edition)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.book_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.book_ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.book_published_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Book_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Publisher_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Book_Edition)
        </td>
    </tr>
}

</table>

